<div class="container-fluid">

<div class="container">

  <h1 class="mb-5">Découvrez les dernières reviews !</h1>

  <div class="row row-cols-1 row-cols-md-4">
    <% @posts.each do |post| %>
      <div class="col">
        <div class="card mb-4">
          <img src="<%= post.image %>" class="card-img-top">
          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.content.truncate(250) %></p>
            </div>
              <%= link_to 'Lire la review', post, class: "btn btn-dark" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'Créer une nouvelle review', new_post_path,  class: "btn btn-outline-dark"  %>
